<h1>Apply for job</h1>

<div class="container">
  <form action="process-contact" method="POST">
  <div class="form-group row">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Full Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control form-control-sm" id="fullName" name="fullName">
    </div>
  </div>
  
  <div class="form-group row">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control form-control-sm" id="email" name="email" placeholder="example@email.com">
    </div>
  </div>

  <div class="form-group row">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Message</label>
    <div class="col-sm-10">
      <input type="text" class="form-control form-control-sm" id="message" name="message" placeholder="Message sent to the employer">
    </div>
  </div>

  
  <div class="form-group">
    <label for="exampleFormControlFile1">Upload CV </label>
    <input type="file" class="form-control-file" id="img" name="img">
  </div>

  <button type="submit" class="btn btn-primary" id="submit">Send Application</button>
</form>
</div>